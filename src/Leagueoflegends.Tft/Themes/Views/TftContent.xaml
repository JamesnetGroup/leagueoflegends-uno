<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:units="using:Leagueoflegends.Support.UI.Units"
  xmlns:views="using:Leagueoflegends.Tft.UI.Views">

  <Style x:Key="TicketIconStyle" TargetType="Path">
    <Setter Property="Data" Value="M15.58,16.8L12,14.5L8.42,16.8L9.5,12.68L6.21,10L10.46,9.74L12,5.8L13.54,9.74L17.79,10L14.5,12.68M20,12C20,10.89 20.9,10 22,10V6C22,4.89 21.1,4 20,4H4A2,2 0 0,0 2,6V10C3.11,10 4,10.9 4,12A2,2 0 0,1 2,14V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V14A2,2 0 0,1 20,12Z" />
    <Setter Property="Fill" Value="#F0E6D2"/>
    <Setter Property="Width" Value="36"/>
    <Setter Property="Height" Value="36"/>
    <Setter Property="Margin" Value="0 2 10 -2"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Stretch" Value="Uniform"/>
  </Style>

  <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="38"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="#F0E6D2"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style x:Key="SplitBorderStyle" TargetType="Border">
    <Setter Property="BorderBrush" Value="#BC9D6B"/>
    <Setter Property="BorderThickness" Value="0 0 0 2"/>
    <Setter Property="Margin" Value="0 5 0 10"/>
  </Style>

  <Style x:Key="EventInfoStyle" TargetType="StackPanel">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Margin" Value="0 5 0 10"/>
  </Style>

  <Style x:Key="ClockIconStyle" TargetType="Path">
    <Setter Property="Data" Value="M12 20C16.4 20 20 16.4 20 12S16.4 4 12 4 4 7.6 4 12 7.6 20 12 20M12 2C17.5 2 22 6.5 22 12S17.5 22 12 22C6.5 22 2 17.5 2 12C2 6.5 6.5 2 12 2M15.3 16.2L14 17L11 11.8V7H12.5V11.4L15.3 16.2Z"/>
    <Setter Property="Fill" Value="#C89B3C"/>
    <Setter Property="Width" Value="16"/>
    <Setter Property="Height" Value="16"/>
    <Setter Property="Margin" Value="0 0 5 0"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Stretch" Value="Uniform"/>
  </Style>

  <Style x:Key="EventTextStyle" TargetType="TextBlock">
    <Setter Property="Foreground" Value="#A09B8C"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style x:Key="PassUpgradeButtonStyle" TargetType="units:RiotButton">
    <Setter Property="Content" Value="PASS UPGRADE"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="Padding" Value="20 0 20 0"/>
    <Setter Property="Margin" Value="0 20 0 0"/>
  </Style>

  <LinearGradientBrush x:Key="LevelBackgroundBrush" StartPoint="0, 0.5" EndPoint="1, 0.5">
    <GradientStop Color="#BB000000" Offset="0"/>
    <GradientStop Color="#99000000" Offset="0.3"/>
    <GradientStop Color="#66000000" Offset="0.7"/>
    <GradientStop Color="#33000000" Offset="0.9"/>
    <GradientStop Color="#00000000" Offset="1"/>
  </LinearGradientBrush>

  <Style x:Key="RiotNewsButtonStyle" TargetType="units:RiotNewsButton">
    <Setter Property="ImageHeight" Value="130"/>
    <Setter Property="Margin" Value="0 0 10 0"/>
  </Style>

  <Style x:Key="LevelProgressBarStyle" TargetType="ProgressBar">
    <Setter Property="Margin" Value="0 3 0 0"/>
    <Setter Property="Width" Value="270"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ProgressBar">
          <Border Background="Transparent" BorderBrush="#463714" BorderThickness="1">
            <Border Background="#0A323C" BorderBrush="#072228" BorderThickness="1" Padding="1">
              <Grid x:Name="PART_Track">
                <Rectangle x:Name="PART_Indicator" HorizontalAlignment="Left" Fill="#0A323C" Height="4"/>
              </Grid>
            </Border>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="LevelControlStyle" TargetType="ContentControl">
    <Setter Property="Margin" Value="0 40 0 0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ContentControl">
          <Grid>
            <Polygon Points="0,0 150,0 175,25 270,25 270,60 0,60 0,0" Fill="{StaticResource LevelBackgroundBrush}"/>
            <Border>
              <Grid Margin="0 0 5 5">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 5">
                  <TextBlock Text="Lv.6" Foreground="#F0E6D2" FontSize="25" Margin="0 5 0 -5" FontWeight="Bold" VerticalAlignment="Bottom"/>
                  <TextBlock Text="100" Foreground="#0AC8B9" FontSize="12" FontWeight="Normal" VerticalAlignment="Bottom" Margin="30 0 0 0"/>
                  <TextBlock Text="  /  500" Foreground="#848484" FontSize="12" FontWeight="Normal" VerticalAlignment="Bottom" Margin="0 0 0 0"/>
                </StackPanel>
                <ProgressBar Grid.Row="1" Style="{StaticResource LevelProgressBarStyle}"/>
              </Grid>
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="views:TftContent">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="views:TftContent">
          <Border>
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <StackPanel HorizontalAlignment="Left" Margin="30">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                  <Path Style="{StaticResource TicketIconStyle}"/>
                  <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="FATES PASS"/>
                </StackPanel>
                <Border Style="{StaticResource SplitBorderStyle}"/>
                <StackPanel Style="{StaticResource EventInfoStyle}">
                  <Path Style="{StaticResource ClockIconStyle}"/>
                  <TextBlock Style="{StaticResource EventTextStyle}" Text="Event ends in 14 days!"/>
                </StackPanel>
                <units:RiotButton Style="{StaticResource PassUpgradeButtonStyle}"/>
                <ContentControl Style="{StaticResource LevelControlStyle}"/>
              </StackPanel>

              <units:RiotStageListBox Grid.Row="1" ItemsSource="{Binding TeamFights}"/>

              <Border Grid.Row="2" Padding="10 10 10 10" Background="#AA000000">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                  </Grid.ColumnDefinitions>
                  <units:RiotTftNewsButton Grid.Column="0" Margin="10"
                    Style="{StaticResource RiotNewsButtonStyle}"
                    Text="Wallpaper Fiora"
                    ImageSource="ms-appx:///Leagueoflegends.Support/Images/wallpaper-fiora.jpg"/>
                  <units:RiotTftNewsButton Grid.Column="1" Margin="10"
                    Style="{StaticResource RiotNewsButtonStyle}"
                    Text="Wallpaper Jinx"
                    ImageSource="ms-appx:///Leagueoflegends.Support/Images/wallpaper-jinx.jpg"/>
                  <units:RiotTftNewsButton Grid.Column="2" Margin="10"
                    Style="{StaticResource RiotNewsButtonStyle}"
                    Text="Wallpaper Maokai"
                    ImageSource="ms-appx:///Leagueoflegends.Support/Images/wallpaper-maokai.jpg"/>
                  <units:RiotTftNewsButton Grid.Column="3" Margin="10"
                    Style="{StaticResource RiotNewsButtonStyle}"
                    Text="Wallpaper Caitlyn"
                    ImageSource="ms-appx:///Leagueoflegends.Support/Images/wallpaper-caitlyn.jpg"/>
                </Grid>
              </Border>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
