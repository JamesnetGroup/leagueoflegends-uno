<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:units="using:Leagueoflegends.Support.UI.Units"
  xmlns:views="using:Leagueoflegends.Clash.UI.Views">

  <Style TargetType="views:HubContent">
    <Setter Property="Margin" Value="0 60 0 0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="views:HubContent">
          <Grid ColumnDefinitions="Auto, *">
            <units:RiotHubSummary/>
            <units:RiotTabMenu Grid.Column="1">
              <units:RiotTabMenuItem>SCHEDULE</units:RiotTabMenuItem>
              <units:RiotTabMenuItem>HISTORY</units:RiotTabMenuItem>
            </units:RiotTabMenu>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
