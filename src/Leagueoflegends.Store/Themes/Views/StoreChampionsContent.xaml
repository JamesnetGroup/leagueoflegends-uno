<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:units="using:Leagueoflegends.Support.UI.Units"
  xmlns:views="using:Leagueoflegends.Store.UI.Views">

  <Style TargetType="views:StoreChampionsContent">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="views:StoreChampionsContent">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="20 60 0 0">
              <units:RiotStoreChampSummary/>
              
            </StackPanel>
            <units:RiotChampListBox
              Grid.Column="1"
              ItemsSource="{Binding Champions}"
              Margin="20 0 0 0"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
