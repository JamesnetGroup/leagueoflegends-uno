<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:units="using:Leagueoflegends.Support.UI.Units">

  <Style TargetType="units:RiotFriendsTreeViewItem">
    <Setter Property="ItemsBindingPath" Value="Friends"/>

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotFriendsTreeViewItem">
          <Grid x:Name="PART_Root">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Name}" Foreground="#FFFFFF"/>
            <StackPanel Grid.Row="1" x:Name="PART_ItemsPanel" Margin="10 0 0 0"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
