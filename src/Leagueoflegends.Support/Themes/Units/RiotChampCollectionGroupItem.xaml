<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="using:Leagueoflegends.Support.UI.Units">

  <Style TargetType="units:RiotChampCollectionGroupItem">
    <Setter Property="IsExpanded" Value="True"/>
    <Setter Property="ItemsBindingPath" Value="Children"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotChampCollectionGroupItem">
          <StackPanel Margin="0,0,20,0">
            <StackPanel Orientation="Horizontal" Margin="10, 0, 0, 20">
              <TextBlock
                Text="{Binding Header}"
                Foreground="#F0E6D2"
                FontSize="20"
                FontWeight="Bold"
                Margin="0,0,40,0"/>
              <TextBlock
                Text="{Binding Children.Count}"
                Foreground="#C0A267"
                FontSize="20"
                FontStyle="Italic"/>
            </StackPanel>
            <WrapPanel
              x:Name="PART_ItemsPanel" 
              Orientation="Horizontal" 
              HorizontalAlignment="Stretch"/>
          </StackPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
