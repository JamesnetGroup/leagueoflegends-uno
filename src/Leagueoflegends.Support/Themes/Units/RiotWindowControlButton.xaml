  <Style x:Key="RootGridStyle" TargetType="Grid">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <Style x:Key="IconPathStyle" TargetType="Path">
    <Setter Property="Stretch" Value="Uniform"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Fill" Value="#A09B8C"/>
  </Style>

  <Style TargetType="units:RiotWindowControlButton">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Width" Value="10"/>
    <Setter Property="Height" Value="10"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotWindowControlButton">
          <Grid x:Name="RootGrid" Style="{StaticResource RootGridStyle}">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal"/>
                <VisualState x:Name="PointerOver">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Fill" Value="#F0E6D2"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Fill" Value="#C8AA6E"/>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
              <VisualStateGroup x:Name="IconStates">
                <VisualState x:Name="Help">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource HelpIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Minimize">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource MinimizeIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Settings">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource SettingsIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Close">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource CloseIconData}"/>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path x:Name="IconPath" Style="{StaticResource IconPathStyle}"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
