  <Style x:Key="PathStyle" TargetType="Path">
    <Setter Property="Stretch" Value="Uniform"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style TargetType="units:RiotIconButton">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Width" Value="14"/>
    <Setter Property="Height" Value="14"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotIconButton">
          <Grid Background="{TemplateBinding Background}">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Fill" Value="#C8AA6E"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="PointerOver">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Fill" Value="#F0E6D2"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Fill" Value="#C8AA6E"/>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
              <VisualStateGroup x:Name="IconStates">
                <VisualState x:Name="Alarm">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource AlarmIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="AddFolder">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource AddFolderIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="AddFriends">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource AddFriendsIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Magnify">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource MagnifyIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Option">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource OptionIconData}"/>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path x:Name="IconPath" Style="{StaticResource PathStyle}"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
