<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:units="using:Leagueoflegends.Support.UI.Units">

  <Style TargetType="units:RiotFriendGroupItem">
    <Setter Property="ItemsBindingPath" Value="Children"/>
    <Setter Property="Foreground" Value="#A09B8C"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotFriendGroupItem">
          <Grid Background="Transparent">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="PART_Root">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <units:RiotFoldableIcon IsChecked="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Mode=TwoWay, Path=IsExpanded}" Margin="10 5 0 5">
                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="5 0 0 0"/>
              </units:RiotFoldableIcon>
            </Grid>
            <StackPanel Grid.Row="1" x:Name="PART_ItemsPanel" Margin="10 4 0 0"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
