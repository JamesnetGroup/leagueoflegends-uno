<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cnvts="using:Leagueoflegends.Support.Local.Converters"
  xmlns:units="using:Leagueoflegends.Support.UI.Units">

  <Style TargetType="units:RiotMatchHistoryListBox">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotMatchHistoryListBox">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock
              Text="RECENT GAMES (LAST 20 PLAYED)"
              Foreground="#F0E6D2"
              FontSize="16"
              Margin="20,0,0,0"/>
            <ScrollViewer
              Grid.Row="1"
              Margin="0,20,0,0"
              Padding="20 0 0 0"
              VerticalScrollBarVisibility="Hidden"
              HorizontalScrollBarVisibility="Disabled">
              <ItemsPresenter/>
            </ScrollViewer>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
