  <LinearGradientBrush x:Key="CheckedBackground" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="Transparent" Offset="0"/>
    <GradientStop Color="#008B6811" Offset="0.5"/>
    <GradientStop Color="#228B6811" Offset="0.75"/>
    <GradientStop Color="#448B6811" Offset="1"/>
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ArrowFillBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF785A28" Offset="0"/>
    <GradientStop Color="#FFBD9139" Offset="1"/>
  </LinearGradientBrush>

  <Style x:Key="MenuPathStyle" TargetType="Path">
    <Setter Property="Fill" Value="#CDBE91"/>
    <Setter Property="Stretch" Value="Uniform"/>
    <Setter Property="Width" Value="24"/>
    <Setter Property="Height" Value="24"/>
  </Style>

  <Style x:Key="SelectionPathStyle" TargetType="Path">
    <Setter Property="Data" Value="{StaticResource ArrowIconData}"/>
    <Setter Property="Fill" Value="{StaticResource ArrowFillBrush}"/>
    <Setter Property="Stretch" Value="Uniform"/>
    <Setter Property="Width" Value="30"/>
    <Setter Property="Height" Value="15"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Top"/>
    <Setter Property="Visibility" Value="Collapsed"/>
  </Style>

  <Style TargetType="units:RiotMainIconMenu">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="#CDBE91"/>
    <Setter Property="Padding" Value="15,28"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="units:RiotMainIconMenu">
          <Grid>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal"/>
                <VisualState x:Name="PointerOver">
                  <VisualState.Setters>
                    <Setter Target="PointerOverRect.Fill" Value="{StaticResource CheckedBackground}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <VisualState.Setters>
                    <Setter Target="PointerOverRect.Fill" Value="{StaticResource CheckedBackground}"/>
                    <Setter Target="IconPath.Fill" Value="#FFFCF1DC"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Disabled"/>
              </VisualStateGroup>
              <VisualStateGroup x:Name="CheckStates">
                <VisualState x:Name="Checked">
                  <VisualState.Setters>
                    <Setter Target="PointerOverRect.Fill" Value="Transparent"/>
                    <Setter Target="CheckedRect.Fill" Value="{StaticResource CheckedBackground}"/>
                    <Setter Target="IconPath.Fill" Value="#FFFFFF"/>
                    <Setter Target="SelectionPath.Visibility" Value="Visible"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Unchecked">
                  <VisualState.Setters>
                    <Setter Target="CheckedRect.Fill" Value="Transparent"/>
                    <Setter Target="IconPath.Fill" Value="#CDBE91"/>
                    <Setter Target="SelectionPath.Visibility" Value="Collapsed"/>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
              <VisualStateGroup x:Name="IconStates">
                <VisualState x:Name="ProfileIcon">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource ProfileIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="CollectionIcon">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource CollectionIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="LootIcon">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource LootIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="ShopIcon">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource ShopIconData}"/>
                  </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="StoreIcon">
                  <VisualState.Setters>
                    <Setter Target="IconPath.Data" Value="{StaticResource StoreIconData}"/>
                  </VisualState.Setters>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Rectangle x:Name="CheckedRect" Fill="Transparent"/>
            <Rectangle x:Name="PointerOverRect" Fill="Transparent"/>
            <Path x:Name="SelectionPath" Style="{StaticResource SelectionPathStyle}"/>
            <Path
              x:Name="IconPath"
              Style="{StaticResource MenuPathStyle}"
              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
              Margin="{TemplateBinding Padding}"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
